<section>
  <h2>
    <%= @dog.name %>
    <%= render partial: 'dog_like', locals: { dog: @dog, can_like: current_user && !is_owned_by_current?(@dog) } %>
  </h2>

  <%= render partial: 'dog_carousel', locals: { dog: @dog } %>

  <% if is_owned_by_current?(@dog) %>
    <%= link_to "Edit #{@dog.name}'s Profile", edit_dog_path %>
    <br>
    <%= link_to "Delete #{@dog.name}'s Profile", dog_path, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</section>