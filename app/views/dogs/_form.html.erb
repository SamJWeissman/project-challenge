<%= simple_form_for @dog, defaults: { input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' } } do |f|%>
  <%= f.input :name %>
  <%= f.input :description, as: :text %>
  <%= f.input :image, as: :file, :input_html => { :multiple => true } %>

  <% if @dog.images.any? %>
    <%= render partial: 'dog_carousel', locals: { dog: @dog } %>
  <% end %>

  <%= f.button :submit, class: 'btn btn-lg btn-primary btn-block' %>
<% end %>